extends layout
block extraHeader
    link(rel='stylesheet', href='/stylesheets/styleConfig.css')
    link(rel='stylesheet', href='/stylesheets/styleAgregar.css')

block content
  h1 Agregar Horario Profesor
  form#agregarHorarioProfesorForm.form-group()
    br
    .form-inline
      .input-group
        label#labelHorarioGrupoHorarioProfesor.input-group-addon(for='id_horario_grupo') Horario Grupo
        select.form-control.has-feedback(name='id_horario_grupo' id='id_horario_grupo')
          option(value='default') Elige el horario_grupo
          for gr in grupo
            option(value='#{gr.id_horario_grupo}') #{gr.id_horario_grupo}
        span#id_horario_grupo1.glyphicon.form-control-feedback
    br
    #mensaje.alert.alert-error.fade.in(style='display: none')
      a.close(href='#', data-dismiss='alert') ×
      strong Comprueba!
      span#sp  Dia ya existente
    .form-inline
      .input-group
        label#labelProfesorHorarioProfesor.input-group-addon(for='id_profesor') Profesor
        select#selectProfesorHorarioProfesor.form-control.has-feedback(name='id_profesor')
          option(value='default') Elige el Profesor
          for pr in profesor
            option(value='#{pr.id_profesor}') #{pr.nombre} #{pr.apellidos}
        span#selectProfesorHorarioProfesor1.glyphicon.form-control-feedback
    br
    #horarioGrupoHorarioProfesor(name='horarioGrupoHorarioProfesor')
    br
    button#send.btn.btn-success(name='send') Agregar
    a#enlace.btn.btn-primary(href='/config') Volver
    #mensaje2.alert.alert-error.fade.in(style='display: none')
      a.close(href='#', data-dismiss='alert') ×
      strong 
      span#sp2
  div#buscador(title='Buscador')
  div#divCorreo(title='Formulario contacto')               
  script
    include ../public/js/config.js  
    include ../public/js/agregarHorarioProfesor.js
  include ./includes/footer.jade     