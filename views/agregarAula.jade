extends layout
block extraHeader
    link(rel='stylesheet', href='/stylesheets/styleAgregar.css')

block content
  h1 Agregar Aula
  form#agregarAulaForm.form-group()
    .form-inline#alertNumero
      .input-group
        label.input-group-addon(for='numero') NUMERO
        input#numero.form-control.has-feedback(type='number', name='numero', placeholder='Escribe el numero')
        span#numero1.glyphicon.form-control-feedback
    #mensaje.alert.alert-error.fade.in(style='display: none')
      a.close(href='#', data-dismiss='alert') Ã—
      strong Comprueba!
      span#sp  Numero ya existente
    br  
    .form-inline#alertPiso
      .input-group
        label.input-group-addon(for='piso') PISO
        input#piso.form-control.has-feedback(type='number', name='piso', placeholder='Escribe el piso')
        span#piso1.glyphicon.form-control-feedback
    br
    .form-inline#alertCapacidad
      .input-group
        label.input-group-addon(for='capacidad') CAPACIDAD
        input#capacidad.form-control.has-feedback(type='number', name='capacidad', placeholder='Escribe la capacidad')
        span#capacidad1.glyphicon.form-control-feedback
    br
    button#send.btn.btn-success(name='send') Agregar
    a#enlace.btn.btn-primary(href='/config') Volver
  script
    include ../public/js/agregarAula.js
    