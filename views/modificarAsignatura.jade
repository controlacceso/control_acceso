extends layout
block extraHeader
    link(rel='stylesheet', href='/stylesheets/styleModificar.css')

block content
  h1 Modificar Asignatura
  .container
    form#form.form-group
      .form-inline
        .input-group
          label.input-group-addon(for='nombre') Nombre: 
          input#nombre.form-control(type='text', name='nombre', placeholder='Escribe el nombre de la asignatura')
        br
        br
        input.btn.btn-primary(type='submit', value='Buscar')
        a#enlace.btn.btn-primary(href='/config') Volver
    #resultado.container
  script
    include ../public/js/modificarAsignatura.js